<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/library_back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Library" >

    <!-- this is the "Home" button, onClick it commands a switch to the HomeScreen activity -->
    <Button
        android:id="@+id/homeButtonFromLib"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="toHome"
        android:text="@string/home_button" />
    
    
	<!-- this is the text box to be used for search in the library activity -->
    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/homeButtonFromLib"
        android:ems="10"
        android:inputType="textPersonName" />

    <!-- this is to be used to display the stories (the users selection) -->

    <ListView
        android:id="@+id/story_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignLeft="@+id/homeButtonFromLib"
        android:layout_below="@+id/homeButtonFromLib"
        android:background="@drawable/white_background" >

    </ListView>

</RelativeLayout>
